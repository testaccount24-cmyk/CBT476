)ATTR
 ¬ TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW) HILITE(REVERSE)
 @ TYPE(TEXT) INTENS(HIGH) COLOR(PINK)
 # TYPE(TEXT) INTENS(LOW)  COLOR(TURQ)
 \ TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW)
 ! TYPE(TEXT) INTENS(HIGH) COLOR(RED)
 $ TYPE(TEXT) INTENS(LOW)  COLOR(GREEN)
)BODY EXPAND(``)
%-`-`-  ZIL - RELINK FUNCTION INTO PROGRAM  -`-`-
%COMMAND ===>_ZCMD
+
\  FUNCTION NAME        %===>_XZIL8FN +

\  INCLUDED FROM LIBRARY%===>_XZIL8FL                              +


\  MAIN PROGRAM NAME    %===>_XZIL8PN +

\  LOAD MODULE LIBRARY  %===>_XZIL8PL                              +


+Press!END+key to return to the previous option menu.
)INIT
 .HELP = TXZIL8
 IF (&XZIL8FN = '') &XZIL8FN = &XZILMEM
 IF (&XZIL8FL = '') &XZIL8FL = &XZILLNK
)PROC
 IF (&ZCMD ¬= '') .MSG = ISPZ001
 VER(&XZIL8FN NB NAME)
 VER(&XZIL8FL NB DSNAME)
 VER(&XZIL8PN NB NAME)
 VER(&XZIL8PL NB DSNAME)
 &TEMP = TRUNC(&XZIL8FL,'(')
 IF (&TEMP ¬= '&XZIL8FL')  .MSG = XZIL001
 &TEMP = TRUNC(&XZIL8PL,'(')
 IF (&TEMP ¬= '&XZIL8PL')  .MSG = XZIL001
 IF (&XZIL8FL ¬= &Z)
  &TEMP = TRUNC(&XZIL8FL,1)
  IF (&TEMP ¬= '''')
    &XZIL8FL = '''&ZPREFIX..&XZIL8FL'''
 IF (&XZIL8PL ¬= &Z)
  &TEMP = TRUNC(&XZIL8PL,1)
  IF (&TEMP ¬= '''')
    &XZIL8PL = '''&ZPREFIX..&XZIL8PL'''
 VPUT (XZIL8FN XZIL8FL XZIL8PN XZIL8PL) PROFILE
)END
