)ATTR
 ¬ TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW) HILITE(REVERSE)
 @ TYPE(TEXT) INTENS(HIGH) COLOR(PINK)
 # TYPE(TEXT) INTENS(LOW)  COLOR(TURQ)
 \ TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW)
 ! TYPE(TEXT) INTENS(HIGH) COLOR(RED)
 $ TYPE(TEXT) INTENS(LOW)  COLOR(GREEN)
)BODY EXPAND(``)
%-`-`-  ZIL - FOREGROUND COMPILE  -`-`-
%OPTION ===>_XZILSEL
+
+Option: @F+function,@P+program,@M+module,@E+edit,@blank+member selection list
+
\  LISP SOURCE MEMBER NAME   %===>_XZILMEM %Overriding name%===>_XZILNAM +
\  LISP SOURCE LIBRARY (PDS) %===>_XZILSRC                              +
\  TARGET LOAD LIBRARY       %===>_XZILLNK                              +

\  SUBROUTINE LIBRARY NAMES  %===>_XZILSUB1                             +
                             %===>_XZILSUB2                             +
#  (Must be load libraries   %===>_XZILSUB3                             +
#   without member names)    %===>_XZILSUB4                             +

\  COMPILE-TIME MACRO FILES  %===>_XZILMAC1                             +
                             %===>_XZILMAC2                             +
#  (Must be sequential       %===>_XZILMAC3                             +
#   datasets or PDS members) %===>_XZILMAC4                             +
+
\  Options: #ACSIZE_XZILACSZ#CSSIZE_XZILCSSZ#PDSIZE_XZILPDSZ#VSSIZE_XZILVSSZ+
$  Debug?_Z$Show TRNLIST?_Z$Show ZILLIST?_Z$Show ASMLIST?_Z$Show LNKLIST?_Z\

\  SYSTEM#(NEW, OLD or blank)%===>_Z  #                                 #
)INIT
 .ZVARS = '(XZILDBG XZILTRN XZILBZL XZILBAL XZILBLL XZILSYS)'
 .HELP = TXZIL4
 IF (&XZILSEL = ' ')
  .CURSOR = XZILSEL
 IF (&XZILACSZ = &Z) &XZILACSZ = DEFAULT
 IF (&XZILCSSZ = &Z) &XZILCSSZ = DEFAULT
 IF (&XZILPDSZ = &Z) &XZILPDSZ = DEFAULT
 IF (&XZILVSSZ = &Z) &XZILVSSZ = DEFAULT
 IF (&XZILDBG = &Z) &XZILDBG = N
 IF (&XZILTRN = &Z) &XZILTRN = N
 IF (&XZILBZL = &Z) &XZILBZL = Y
 IF (&XZILBAL = &Z) &XZILBAL = Y
 IF (&XZILBLL = &Z) &XZILBLL = Y
 &XZILSYS = TRANS(&XZILSYS N,NEW O,OLD)
)PROC
 VER(&XZILSEL LIST P,F,M,E)
 IF (&XZILSEL ¬= &Z)
  VER(&XZILMEM NB NAME)
 ELSE
  &TEMP = TRUNC(&XZILMEM,'*')
  IF (&TEMP = '&XZILMEM')
   VER(&XZILMEM NAME)
 VER(&XZILNAM NAME)
 VER(&XZILSRC NB DSNAME)
 VER(&XZILLNK NB DSNAME)
 VER(&XZILSUB1 DSNAME)
 VER(&XZILSUB2 DSNAME)
 VER(&XZILSUB3 DSNAME)
 VER(&XZILSUB4 DSNAME)
 VER(&XZILMAC1 DSNAME)
 VER(&XZILMAC2 DSNAME)
 VER(&XZILMAC3 DSNAME)
 VER(&XZILMAC4 DSNAME)
 &TEMP = TRUNC(&XZILSRC,'(')
 IF (&TEMP ¬= '&XZILSRC')  .MSG = XZIL001
 &TEMP = TRUNC(&XZILLNK,'(')
 IF (&TEMP ¬= '&XZILLNK')  .MSG = XZIL001
 &TEMP = TRUNC(&XZILSUB1,'(')
 IF (&TEMP ¬= '&XZILSUB1')  .MSG = XZIL001
 &TEMP = TRUNC(&XZILSUB2,'(')
 IF (&TEMP ¬= '&XZILSUB2')  .MSG = XZIL001
 &TEMP = TRUNC(&XZILSUB3,'(')
 IF (&TEMP ¬= '&XZILSUB3')  .MSG = XZIL001
 &TEMP = TRUNC(&XZILSUB4,'(')
 IF (&TEMP ¬= '&XZILSUB4')  .MSG = XZIL001
 IF (&XZILACSZ = DEFAULT) &XZILACSZ = &Z
 IF (&XZILCSSZ = DEFAULT) &XZILCSSZ = &Z
 IF (&XZILPDSZ = DEFAULT) &XZILPDSZ = &Z
 IF (&XZILVSSZ = DEFAULT) &XZILVSSZ = &Z
 VER(&XZILDBG NB LIST Y,N)
 VER(&XZILBZL NB LIST Y,N)
 VER(&XZILTRN NB LIST Y,N)
 VER(&XZILBAL NB LIST Y,N)
 VER(&XZILBLL NB LIST Y,N)
 &XZILSYS = TRUNC(&XZILSYS,1)
 VER (&XZILSYS LIST N,O)
 VPUT (XZILSEL XZILMEM XZILNAM XZILSRC XZILLNK XZILSYS
       XZILSUB1 XZILSUB2 XZILSUB3 XZILSUB4
       XZILMAC1 XZILMAC2 XZILMAC3 XZILMAC4
       XZILACSZ XZILCSSZ XZILPDSZ XZILVSSZ
       XZILTRN XZILBZL XZILBAL XZILBLL) PROFILE
)END

